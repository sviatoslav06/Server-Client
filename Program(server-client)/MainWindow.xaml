<Window x:Class="Program_server_client_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program_server_client_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="type" Height="auto" VerticalContentAlignment="Center"></TextBox>
            <Button Grid.Column="1" Padding="10" Click="PushButton_Click">Push</Button>
        </Grid>
        <TextBlock Name="responseText" DockPanel.Dock="Right"></TextBlock>
    </DockPanel>
</Window>
